<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Booknetwork" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Booknetwork.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="input_layoud_text" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense
        </item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/colors_inpu_text</item>
        <item name="android:linksClickable">false</item>
    </style>

    <style name="input_layoud_text_view">
        <item name="android:textColorHint">@color/text_title</item>
        <item name="boxStrokeColor">@color/colors_inpu_text</item>
        <item name="android:linksClickable">false</item>
    </style>

    <style name="text_title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:linksClickable">false</item>
    </style>

    <style name="view_text">
        <item name="android:linksClickable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="input_view_text_attr">
        <item name="android:linksClickable">false</item>
    </style>

    <style name="input_edit_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:linksClickable">false</item>
    </style>

    <style name="input_view_text" parent="input_view_text_attr">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="multi_view_text" parent="view_text">
        <item name="android:textColor">@color/white</item>
    </style>
    >

    <style name="input_edit_text_view" parent="input_view_text_attr">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="edit_text_view" parent="view_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="book_manage_image_from_input_text">
        <item name="android:layout_marginEnd">-4dp</item>
        <item name="android:layout_marginRight">-4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
    </style>

    <style name="input_edit_text_view_image" parent="@style/input_edit_text_view">
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">23dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edit_text_view_image" parent="@style/edit_text_view">
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">23dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button_green">
        <item name="android:background">@color/primary_green</item>
    </style>

    <style name="Theme.Booknetwork.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Booknetwork.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>